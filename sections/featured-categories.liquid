<div class="wrapper">
  <div class="grid grid-cols-1 lg:grid-cols-3 items-center gap-4 py-4 my-8">
    <div class="col-span-1">
      <h2 class="uppercase font-black leading-none title-rich my-4 text-[25px] lg:text-[30px] text-center lg:text-left">
        Categorías
        <strong>Destacadas</strong>
      </h2>
      <p class="text-base lg:text-xl text-center lg:text-left leading-[1.1] mb-4">
        {{ section.settings.bajada }}
      </p>
      <a href="{{ section.settings.link }}" class="btn-rounded btn-primary mx-auto lg:mx-0 mb-4">
        Ver Repuestos
      </a>
    </div>
    <div class="col-span-2">
      <categorias-carousel>
        <div class="categorias-carrousel categorias-carrousel-{{ section.id }} overflow-hidden relative">
        <ul class="swiper-wrapper">
        {% for block in section.blocks %}
          {% render 'category-card', collection: collections[block.settings.coll], class: 'swiper-slide' %}
        {% endfor %}
        </ul>
      </div>
    </categorias-carousel>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Categorías Destacadas",
    "tag": "section",
    "class": "category",
    "limit": 1,
    "settings": [
      {
        "type": "text",
        "id": "bajada",
        "default": "Contamos con miles de repuestos y accesorios de todas las marcas. ¿Qué estas buscando?",
        "label": "Texto para la bajada"
      }, {
        "type": "text",
        "id": "link_text",
        "default": "Ver Repuestos",
        "label": "Texto para el boton"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link para el botón"
      }
    ],
    "blocks": [
      {
        "type": "category",
        "name": "Categoria",
        "settings": [
          {
            "type": "collection",
            "id": "coll",
            "label": "Elige una colección."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Categorías Destacadas",
        "category": "slide"
      }
    ]
  }
{% endschema %}