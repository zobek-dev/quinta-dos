{% comment %}
  @collection: received collection object from for loop
{% endcomment %}
<li class="{{ class }}">
  <a href="{{ collection.url }}" class="block relative">
    <img
      src="{{ collection.featured_image.src  | img_url: '500x' }}"
      alt="{{ collection.featured_image.alt }}"
      width="500"
      height="{{ 500 | divided_by: collection.featured_image.aspect_ratio | ceil }}"
      loading="lazy"
      class="w-full aspect-square object-cover object-center">
    <div class="absolute bottom-0 left-0 z-[9] py-4 w-full bg-[#13203A] text-white bg-opacity-70 flex flex-col justify-center items-center">
      <h3 class="text-[18px] lg:text-[24px] text-center mb-4 uppercase font-black">{{ collection.title | escape }}</h3>
      <div role="button" class="flex uppercase gap-x-2 items-center">
        <span class="font-bold text-[12px] lg:text-[18px]">Ver m√°s</span>
        {% render 'icon-arrows-white', class: 'w-[12px] h-[18px] lg:w-[30px] lg:h-[20px]' %}
      </div>
    </div>  
  </a>
</li>
